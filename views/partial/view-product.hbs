<section>
    <div class="container">

     <div class="row mt-4 ">
        <a href="admin/add-product" class="btn btn-success ml-auto">add product</a>
     </div>

        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">number</th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/products-images/{{this._id}}.png" style="height: 50px; width:50px;"  alt="no image"></td>
      <td >
        <a href="/admin/edit-product/{{this._id}}" class="text-primary"><u>edit</u></a>
        <br>
        <a href="/admin/delete-product/{{this._id}}"    class="text-danger" onclick="return confirm('Are you sure {{this.name}}?')" ><u>delete</u></a>
        </td>
    </tr>
    {{/each}}

    
  </tbody>
</table>
        
    </div>
</section>