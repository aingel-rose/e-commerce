<section>
    <div class="container mt-2">
        <div class="row">
            <div class="col-md-4">

                <h2 class="text-center mb-2">ADD PRODUCT</h2>

                <form action="/admin/add-product" method="POST" enctype="multipart/form-data">

                    <label for="name">Name:</label><br />
                    <input type="text" id="name" name="name" class="form-control"><br /><br />

                    <label for="category">Category:</label><br />
                    <input type="text" id="category" name="category" class="form-control"><br /><br />

                    <label for="price">Price:</label><br />
                    <input type="number" id="price" name="price" class="form-control"><br /><br />

                    <label for="description">Description:</label><br />
                    <input type="text" id="description" name="description" class="form-control"><br /><br />

                    <label for="image">Image:</label><br />
                    <input type="file" id="image" name="image" class="form-control"><br /><br />

                    <input class="btn btn-success" type="submit" value="Submit">

                </form>

            </div>
        </div>
    </div>
</section>